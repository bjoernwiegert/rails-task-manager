<div class="container mt-3">
  <div class= "row mt-3">
    <div class= "col">
      <h1><%= @task.title %></h1>
    </div>
    <div class= "col text-end">
      <%= link_to "Edit Task", edit_task_path, :class => 'btn btn-primary mt-3' %>
    </div>
  </div>
  <div class="p-3 mb-2 bg-warning text-dark rounded mt-3">
    <%= @task.details %>
  </div>
  <div class= "form-check mt-3">
    <% if @task.completed %>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked disabled>
      <label class="form-check-label" for="flexCheckDefault"> This task is completed</label>
    <% else %>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" disabled>
      <label class="form-check-label" for="flexCheckDisabled"> This task is not completed yet</label>
    <% end %>
  </div>
  <div class= "mt-3">
    <%= link_to "Back to list", tasks_path, :class => 'btn btn-secondary mt-3' %>
  </div>
</div>
