<div class="container mt-3 col-4">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <div class="mt-3 row  border border-primary rounded">
      <div class= "form-check mt-3 col-1 ms-3 mt-1 mb-2">
          <% if task.completed %>
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked disabled>
            <label class="form-check-label" for="flexCheckDefault"></label>
          <% else %>
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" disabled>
            <label class="form-check-label" for="flexCheckDisabled"></label>
          <% end %>
      </div>
      <div class= "col-8 text-right mt-3 mb-1">
        <%= link_to task.title, task_path(task), class: 'link-dark ms-3 me-3'  %>
      </div>
      <div class= "col-2 mt-2 mb-1">
        <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
          <button class="btn btn-danger">Delete</button>
        <% end %>
      </div>
    </div>
  <% end %>

  <br>
  <%= link_to "Add a new task", new_task_path, class: 'btn btn-primary mt-3' %>
</div>
